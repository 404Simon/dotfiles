{
  "position": "top",
  "modules-left": [
    "hyprland/workspaces",
    "tray"
  ],
  "modules-center": [
    // "hyprland/window"
    "custom/media"
  ],
  "modules-right": [
    "custom/weather",
    // "custom/ram",
    "battery",
    "bluetooth",
    "network",
    "pulseaudio",
    "clock"
  ],
  "clock": {
    "format": "<span foreground='#f5c2e7'>ï€—   </span>{:%a %d %H:%M}",
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
