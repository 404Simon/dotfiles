  "battery": {
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format": "<span size='13000' foreground='#a6e3a1'>{icon} </span> {capacity}%",
    "format-warning": "<span size='13000' foreground='#B1E3AD'>{icon} </span> {capacity}%",
    "format-critical": "<span size='13000' foreground='#E38C8F'>{icon} </span> {capacity}%",
    "format-charging": "<span size='13000' foreground='#B1E3AD'>ï‡¦ </span>{capacity}%",
    "format-plugged": "<span size='13000' foreground='#B1E3AD'>ï‡¦ </span>{capacity}%",
    "format-alt": "<span size='13000' foreground='#B1E3AD'>{icon} </span> {time}",
    "format-full": "<span size='13000' foreground='#B1E3AD'>ï€„ </span>{capacity}%",
    "format-icons": [
      "ï‰„",
      "ï‰ƒ",
      "ï‰‚",
      "ï‰",
      "ï‰€"
    ],
    "tooltip-format": "{time}"
  },
  "network": {
    // "format-wifi": "<span size='13000' foreground='#f5e0dc'>ï‡«  </span>{essid}",
    "format-wifi": "",
    "format-ethernet": "<span size='13000' foreground='#f5e0dc'>ó°¤­  </span> Disconnected",
    "format-linked": "{ifname} (No IP) ï–",
    "format-disconnected": "<span size='13000' foreground='#f5e0dc'>ïª  </span>Disconnected",
    "tooltip-format-wifi": "{essid} Signal Strenght: {signalStrength}%",
    "interface": "wlan0"
  },
  "pulseaudio": {
    "format": "{icon}  {volume}%",
    "format-muted": "ï‘¦",
    "format-icons": {
      "default": [
        "ï€¦",
        "ï€§",
        "ï€¨ "
      ]
    },
    "on-click": "pavucontrol"
  },
  "bluetooth": {
    // "controller": "controller1", // specify the alias of the controller if there are more than 1 on the system
    "format": "ïŠ” {status}",
    "format-disabled": "", // an empty format will hide the module
    "format-connected": "ïŠ” {num_connections} connected",
    "tooltip-format": "{controller_alias}\t{controller_address}",
    "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{device_enumerate}",
    "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
    "on-click": "blueman-manager"
  },
  "tray": {
    "icon-size": 16,
    "spacing": 10
  },
  "custom/media": {
    "format": "ğŸµ {}",
    "exec": "rmpc song | jq -r '.metadata | \"\\(.title) - \\(.artist)\"'",
    "interval": 5,
    "on-click": "rmpc togglepause",
    "on-scroll-up": "rmpc prev",
    "on-scroll-down": "rmpc next"
  },
  "custom/weather": {
    // "exec": "~/.cargo/bin/waybar-weather",
    // "return-type": "json",
    // "interval": 600,
    // "tooltip": true
    "format": "{}Â° ",
    "tooltip": true,
    "interval": 3600,
    "exec": "wttrbar --date-format %A --location Erlangen",
    "return-type": "json",
    "on-click": "gnome-weather"
  },
  "custom/ram": {
    "format": " {} ",
    "exec": "free -h | awk '/Mem:/ {print $3 \"/\" $2}'",
    "interval": 5
  }
